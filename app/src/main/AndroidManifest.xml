<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.votingapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.VotersActivities.DoneVotingActivity"></activity>
        <activity android:name=".Activities.AdminActivities.AddCandidatesActivity" />
        <activity android:name=".Activities.AdminActivities.AddVoterActivity" />
        <activity android:name=".Activities.VotersActivities.LoginVotersActivity" />
        <activity android:name=".Activities.VotersActivities.VotersHomeActivity" />
        <activity
            android:name=".Activities.AdminActivities.CreateElectionActivity"
            android:parentActivityName=".Activities.AdminActivities.AdminHome" />
        <activity
            android:name=".Activities.AdminActivities.AdminHome"
            android:label="@string/title_activity_admin_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.AdminActivities.SignUpAdminActivity" />
        <activity android:name=".Activities.VotersActivities.SignUpVoterActivity" />
        <activity android:name=".Activities.AdminActivities.LoginAdminActivity" />
        <activity
            android:name=".Activities.Main.UserTypeActivity"
            android:label="UserType" />
        <activity
            android:name=".Activities.Main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>